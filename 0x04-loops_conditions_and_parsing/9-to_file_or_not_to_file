#!/usr/bin/env bash
# This script checks the file named 'school' and prints specific messages

filename="school"

if [ -e "$filename" ]; then
    # File exists
    if [ -f "$filename" ]; then
        echo "$filename is a regular file"
        if [ -s "$filename" ]; then
            echo "$filename file is not empty"
        fi
        echo "$filename file exists"
    elif [ -d "$filename" ]; then
        echo "$filename exists but it’s a directory"
    fi
else
    echo "$filename doesn’t exist"
fi

