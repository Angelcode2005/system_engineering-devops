#!/usr/bin/env bash
# This script checks the 'school' file and prints messages about existence, emptiness, and type

filename="school"

if [ ! -e "$filename" ]; then
    echo "$filename file does not exist"
else
    echo "$filename file exists"
    if [ -s "$filename" ]; then
        echo "$filename file is not empty"
    else
        echo "$filename file is empty"
    fi
    if [ -f "$filename" ]; then
        echo "$filename is a regular file"
    fi
fi
